<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_loading_shape">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLoadingCircle"
            android:layout_width="@dimen/margin_size_45"
            android:layout_height="@dimen/margin_size_45"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_size_15"
            android:src="@mipmap/icon_main_loading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLoadingCircle"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:layout_marginBottom="@dimen/margin_size_10"
            android:text="加载中..."
            android:textColor="#fff" />

    </RelativeLayout>
</layout>